#!/usr/bin/env node
var debug = require('debug')('my-application');
var app = require('../app');

app.set('port', process.env.PORT || 3000);

var server = app.listen(app.get('port'), function() {
  debug('Express server listening on port ' + server.address().port);
});

var io_vrakatar = require('socket.io').listen(8000, {log: false});
var game = require('../game')(io_vrakatar);

var io_site = require('socket.io').listen(8001, {log: false});
var game_site = require('../game_site')(io_site);